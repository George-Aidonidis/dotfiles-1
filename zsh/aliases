alias pull='git pull'
alias undopush='git push -f origin HEAD^:master'
alias n='clone $(clippaste)' # Clone git projet from url in clipboard. See clone in function file
# Disk Usage
alias diskspace='df -P -kHl'



alias ka9='killall -9'
